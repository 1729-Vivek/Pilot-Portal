    <style>
        /* Existing styles */

        /* New style for user information card */
        .user-info-card {
          
            margin: 40% auto;
            margin-left:45%;
            max-width: 30%;
            max-height:75%;
            background-color: #f96868;
            padding: 20px;
            border-radius: 10%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            background: rgba(212, 211, 227, 0.5);
            border-radius: 40px;
            font-family: 'Montserrat', sans-serif;
            font-weight: 400;
            font-size: 15px;
            line-height: 30px;
            color: black;
            align-items: center;
            text-align: end;
            margin-top: 50px;
            transition: transform 0.3s ease-in-out;
        }

        /* New style for user photo container */
        .user-photo-container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 17px;
        }

        /* New style for user photo */
        .user-photo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* New style for alternate profile icon */
        .alternate-profile-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #333;
        }

        /* New style for user name */
        .user-name {
            margin-top: 10px;
            font-weight: bold;
            font-size: 18px;
            color: #333;
        }

        /* New style for form container */
        .form-container {
            margin-top: 20px;
            text-align: left;
            margin-left: 10px;/* Align the form content to the left */
        }

        /* New style for form labels */
        .form-label {
            font-weight: bold;
            display: inline-block;
            width: 250px; /* Adjust the width as needed */
        }

        

        /* New style for form submit button */
        .form-submit-button {
            display: inline-block;
            padding: 8px 16px;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
            width: 100px;
            background: #5C5992;
            border: 3px solid #F5F5F5;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        } 

        .form-submit-button:hover {
            background-color: rgba(217, 217, 217, 0.17);
        }
        .user-photo2{
            position: absolute;
            top: 47px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* New style for alternate profile icon */
        .alternate-profile-icon2 {
            position: absolute;
            top: 47px;
            right: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #f9f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #4b4747;
        }
        .user-name2{
            color:black;
            position: absolute;
            top: 100px;
            right: 20px;
            width: 50px;
            height: 50px;
            font-size: 12px;
            font-weight: bold;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* Pop-up effect */
        .user-info-card:hover {
            transform: scale(1.05);
        }
        fieldset {
    margin-bottom: 20px; /* Adjust the spacing between fieldsets */
    padding: 12px; /* Add padding around fieldsets */
    border: 0px solid #f7f4f4; /* Add border to fieldsets */
    background-color: #f2f2f3; /* Set the background color of fieldsets */
    border-radius: 0px;}

    .container {
  display: grid;
  grid-template-columns: repeat(auto-fit, 1fr); /* Create three equal columns */
  gap: 20px; /* Add
   a gap between the items */
}

.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 40%;
}

    .input-container {
  display: flex;
  justify-content: space-between;
}
.input-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  grid-gap: 40px; /* Adjust the gap between input fields */
}

.input-container input {
  width: 100%; /* Adjust the width of the input fields */
}
.user-photo-container2{
  margin-top:50px;
}

@media screen and (max-width: 1116px) {
    .user-info-card {
        margin: 10% auto;
        max-width: 65%; /* Adjust the width as needed */
        margin-top:180px;
        margin-left:20%;
        
        /* position: fixed; */
    }

    .user-photo-container {
        margin-top: 10px;
    }

    .user-photo {
        width: 80px;
        height: 80px;
    }

    .alternate-profile-icon
     {
        width: 80px;
        height: 80px;
        font-size: 24px;
    }
    .alternate-profile-icon2{
      display:none;
    }

    .user-name,
    .user-name2 {
        margin-top: 5px;
        font-size: 14px;
    }

    .form-label {
        width: 30%; /* Adjust the width as needed */
        font-size: 12px;
        text-align:left;
        
    }
    .fieldset {
        font-size: 20px;

    }

    .input-container {
        grid-gap: 20px; /* Adjust the gap between input fields */
    }

    .input-container input {
        width: 50%; /* Adjust the width of the input fields */
    }
    .user-photo2{
      display:none;
    }
    .user-name2{
      display:none;
    }
    .user-photo-container2{
      display:none;
    }
  }
    @media screen and (max-width: 767px)
    {
    .user-info-card {
        margin: 10% auto;
        max-width: 65%;
        margin-top: 180px;
        margin-left: 20%;
    }

    .user-photo-container {
        margin-top: 10px;
    }

    .user-photo {
        width: 80px;
        height: 80px;
    }

    .alternate-profile-icon {
        width: 80px;
        height: 80px;
        font-size: 24px;
    }

    .alternate-profile-icon2 {
        display: none;
    }

    .user-name,
    .user-name2 {
        margin-top: 5px;
        font-size: 14px;
    }

    .form-label {
        /* Remove fixed width for responsiveness */
        font-size: 12px;
        text-align: left;
    }

    /* Adjust the width of the input fields for responsiveness */
    .input-container input {
        width: 100%;
    }

    .user-photo2 {
        display: none;
    }

    .user-name2 {
        display: none;
    }

    .user-photo-container2 {
        display: none;
    }
    .user-name,
    .user-name2 {
        margin-top: 5px;
        font-size: 14px;
    }
    .mbno{
      font-size:12px;
    }

    .form-label {
        /* Remove fixed width for responsiveness */
        display:flex;
        flex-direction:column;
        font-size: 15px;
        text-align: left;
        white-space:nowrap;
    }
    .input-container {
        width: 100%;
        font-size: 15px;
        text-align:auto;
    }

    .user-photo2 {
        display: none;
    }

    .user-name2 {
        display: none;
    }
    

    .user-photo-container2 {
        display: none;
    }
}





    </style>
