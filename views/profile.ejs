<body>
   
  <div class="topspace">
    <div class="user-photo-container2">
      <% if (imageData && imageContentType) { %>
        <img class="user-photo2" src="data:<%- imageContentType %>;base64,<%- imageData.toString('base64') %>" alt="User Photo">
      <% } else { %>
        <div class="alternate-profile-icon2"><i class="fas fa-user"></i></div>
      <% } %>
      <div class="user-name2"><%- name ? name : 'Name' %></div>
    </div>
    <div class="user-info-card">
      <!-- Add the user photo element -->
      <div class="user-photo-container">
        <% if (imageData && imageContentType) { %>
          <img class="user-photo" src="data:<%- imageContentType %>;base64,<%- imageData.toString('base64') %>" alt="User Photo">
        <% } else { %>
          <div class="alternate-profile-icon"><i class="fas fa-user"></i></div>
        <% } %>
        <div class="user-name"><%- name ? name : 'Name' %></div>
      </div>
      <div class="form-container">
        <form>
            <fieldset>
                <div class="input-container">
          <div>
            <label class="form-label" for="email_id"><b>Email_ID:</b></label>
            <span><%- email %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for="mobile_no"><b>Mobile_Number:</b></label>
            <span><%- mobile_no %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for="dob"><b>DOB:</b></label>
            <span><%- dob %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for="Type of Drone Experience"><b>Type of Drone Experience:</b></label>
            <span><%- type_of_drone_experience %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for="Honors and Achievements"><b>Honors and Achievements:</b></label>
            <span><%- honors_and_achievements %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for='Total Flying Hours'><b>Total Flying Hours:</b></label>
            <span><%- duration1 %></span>
          </div></div></fieldset>
          <fieldset>
            <div class="input-container">
          <div>
            <label class="form-label" for='Total Simulation Time'><b>Total Simulation Time:</b></label>
            <span><%- duration2 %></span>
          </div></div></fieldset>
        </form>
      </div>
    </div>
  </div>
  
  <!-- Add Font Awesome script -->
  <script src="https://kit.fontawesome.com/910477f9a1.js" crossorigin="anonymous"></script>
</body>
