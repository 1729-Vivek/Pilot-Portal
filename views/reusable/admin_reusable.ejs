  <style>
    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Montserrat', sans-serif; /* Montserrat font */
    }

    .side-nav {
      width: 25%;
      background: rgba(92, 89, 146, 1); /* Purple background color */
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

   
    li {
      padding: 10px;
      margin-bottom: 10px; /* Add margin bottom for spacing between elements */
      cursor: pointer;
      position: relative;
      color: #fff; /* White text color */
      transition: background-color 0.3s; /* Smooth transition */
      display: block;
      align-items: center;
      font-size: 20px; /* Reduce the font size for side nav elements */
      font-family: 'Montserrat', sans-serif;
    }


    li:hover {
      background: rgba(255, 255, 255, 0.2); /* Transparent white on hover */
      border-radius: 10px; /* Added */
      padding-left: 15px; /* Added */
    }

    li.active {
      background: #fff;
      font-weight: bold;
    }

    .fa {
      margin-right: 40px;
      margin-left:20px;
      align-items:left;
      color: #000; /* Black icon color */

    }

    .arrow {
      position: absolute;
      top: 50%;
      right: 20px;
      transform: translateY(-50%);
      color: #fff; /* White arrow color */
      font-size: 10px; /* Adjust the font size as desired */
    }

    .arrow.left {
      right: auto;
      left: 10px;
      transform: translateY(-50%) rotate(180deg);
    }

    .top-nav {
  background-color: transparent;
  padding: 10px;
  position: fixed;
  top: 0;
  left: 200px;
  right: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  transition: background-color 0.3s;
  z-index: 2; /* Add a higher z-index value */
}
.logout-link {
      display: flex;
      align-items: center;
      color: #111010;
      text-decoration: none;
      margin-right: -10px;
      font-weight: bold;
      font-size: 14px;
      text-decoration: none; /* Remove underline */
    }

    .logout-icon {
      margin-left: 10px; /* Added to create space between icon and name */
      margin-right: 5px;
      color:black;
    }

    .logout-link:hover,
    .logout-link:focus {
      color: #0b0b0b;
      text-decoration: none;
    }

    .logo{
      display: flex; /* Use flexbox to arrange elements side by side */
